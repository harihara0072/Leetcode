# Definition for singly-linked list.
# class ListNode:
#     def __init__(self, val=0, next=None):
#         self.val = val
#         self.next = next
class Solution:
    def mergeTwoLists(self, l1: ListNode, l2: ListNode) -> ListNode:
        if l1 is None:
            return l2
        elif l2 is None:
            return l1
        
        p1 = l1
        p2 = l2
        if l1.val <= l2.val:
            cur = l1
            p1 = p1.next
        else:
            cur = l2
            p2 = p2.next

        head = cur
        while p2 and p1:
            if p1.val <= p2.val:
                cur.next = p1
                cur = cur.next
                p1 = p1.next
            else:
                cur.next = p2
                cur = cur.next
                p2 = p2.next

        if p1:
            cur.next = p1
        else:
            cur.next = p2

        return head
